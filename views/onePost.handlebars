<div class="container-fluid my-5">

  <div class="card mx-auto my-5" style="width: 80%">
    <div class="card-body">
      <h4 class="post-title" data-postId={{post.id}}>{{post.title}}</h4>
      <h6 class="post-author d-flex justify-content-end">By
        {{post.user.username}}, on
        {{format_date post.date_created}}</h6>
      <p class="post-content">{{post.content}}</p>
    </div>

    {{! if loggedIn and postuser matches loggedIn user:  }}
    {{#if matching}}
      <div class="d-grid gap-2 d-md-flex justify-content-md-end pe-3 pb-3">
        {{! HERE IS BUTTON TO EDIT }}
        <a
          class="btn btn-secondary btn-sm"
          href="/api/posts/{{post.id}}/edit"
          role="button"
          id="edit-post"
        >Edit</a>

        <button
          type="button"
          class="btn btn-secondary btn-sm"
          id="post-delete"
        >Delete</button>
      </div>
    {{/if}}

  </div>

  {{#each post.comments as |comment|}}
    <div class="card mx-auto my-3" style="width: 70%">
      <div class="card-body">
        <h6 class="comment-author">{{comment.user.username}}, on
          {{format_date comment.date_created}}</h6>
        <p class="comment-comment">{{comment.comment}}</p>
      </div>
    </div>
  {{/each}}

  <script src="/js/post.js"></script>

  {{! if logged in, can add comment: }}
  {{#if loggedIn}}
    <div class="card mx-auto my-3" style="width: 60%">
      <form class="comment-form py-3">
        <div class="mb-3 mx-auto" style="width: 80%">
          <label for="comment" class="form-label">Add a comment:</label>
          <textarea class="form-control" id="comment" rows="2"></textarea>
        </div>

        <div class="text-center mt-3">
          <button
            type="submit"
            class="btn btn-secondary"
            id="newPost"
          >Comment</button>
        </div>
      </form>
    </div>

    <script src="/js/comment.js"></script>
  {{/if}}

</div>