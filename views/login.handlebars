<div class="container-fluid text-center">
  <div class="row">

    {{! sign up }}
    <div class="col">
      <div class="card">
        SIGN UP:
        <div class="card-body">
          <form class="signup-form">
            <div class="mb-3">
              <label
                for="exampleInputUsername"
                class="form-label"
              >Username</label>
              <input type="username" class="form-control" id="username-signup" />
            </div>
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Email address</label>
              <input type="email" class="form-control" id="email-signup" />
            </div>
            <div class="mb-3">
              <label
                for="exampleInputPassword1"
                class="form-label"
              >Password</label>
              <input type="password" class="form-control" id="password-signup" />
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
      </div>
    </div>

    {{! login }}
    <div class="col">
      <div class="card">
        LOGIN:
        <div class="card-body">
          <form class="login-form">
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Email address</label>
              <input type="email" class="form-control" id="email-login" />
            </div>
            <div class="mb-3">
              <label
                for="exampleInputPassword1"
                class="form-label"
              >Password</label>
              <input type="password" class="form-control" id="password-login" />
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
      </div>
    </div>

  </div>
</div>