<div class="container-fluid text-center">

  <div class="card mx-auto my-5 pt-3" style="width: 60%">
    <h4>LOGIN:</h4>
    <div class="card-body">
      <form class="login-form">
        <div class="mb-3">
          <label for="email-login" class="form-label">Email address</label>
          <input type="email" class="form-control mx-auto" id="email-login" style="width: 80%" />
        </div>
        <div class="mb-3">
          <label for="password-login" class="form-label">Password</label>
          <input type="password" class="form-control mx-auto" id="password-login" style="width: 80%"/>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <div class="py-2">
          <a href="/signup">Sign up here!</a>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/js/login.js"></script>